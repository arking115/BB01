<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.65 0 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!--BASE LINK-->
    <link name="base_link">
        <!-- You can add visuals and collision properties for the base_link here if needed -->
    </link>

    <!--CHASSIS LINK-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.3 0 0"/>
        <xacro:inertial_box mass="0.5" x="0.6" y="0.5" z="0.15">
            <origin xyz="0.3 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.3 0 0.075" />
            <geometry>
                <box size="0.6 0.5 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.3 0 0.075" />
            <geometry>
                <box size="0.6 0.5 0.15" />
            </geometry>
        </collision>
    </link>
    
    <!--LEFT WHEEL LINK-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.275 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--RIGHT WHEEL LINK-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.275 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--CASTER WHEEL FRONT RIGHT-->
    <joint name="caster_wheel_front_right_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_front_right"/>
        <origin xyz="0.50 0.175 0"/>
    </joint>

    <link name="caster_wheel_front_right">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!--CASTER WHEEL FRONT LEFT-->
    <joint name="caster_wheel_front_left_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_front_left"/>
        <origin xyz="0.50 -0.175 0"/>
    </joint>

    <link name="caster_wheel_front_left">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!--CASTER WHEEL BACK RIGHT-->
    <joint name="caster_wheel_back_right_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_back_right"/>
        <origin xyz="0.10 0.175 0"/>
    </joint>

    <link name="caster_wheel_back_right">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!--CASTER WHEEL BACK LEFT-->
    <joint name="caster_wheel_back_left_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_back_left"/>
        <origin xyz="0.10 -0.175 0"/>
    </joint>

    <link name="caster_wheel_back_left">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.07"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
</robot>
